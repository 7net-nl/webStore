                        <span class="product-available">دسته دوم</span>
                    </div>
                    <p>@Model.Product.Description</p>

                    <div class="product-options">
                        <label>
                            سایز
                            <select class="input-select">

                                <option value="0">@Model.Product.Size</option>
                            </select>
                        </label>
                        <label>
                            رنگ
                            <select class="input-select">
                                <option value="0">@Model.Product.Color</option>
                            </select>
                        </label>
                    </div>
