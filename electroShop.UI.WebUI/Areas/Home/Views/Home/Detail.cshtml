                    <form asp-action="AddTo" asp-controller="Home" asp-area="Cart" asp-route-Id="@Model.Product.ID" method="post">
                        <div class="add-to-cart">
                            <div class="qty-label">
                                تعداد
                                <div class="input-number">
                                    <input name="Count" type="number" value="1" min="1" max="100">
                                    <span class="qty-up">+</span>
                                    <span class="qty-down">-</span>
                                </div>
                            </div>

                            <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> اضافه کردن به سبد خرید</button>

                        </div>
                    </form>
                    }
