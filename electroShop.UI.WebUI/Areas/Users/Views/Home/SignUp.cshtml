@model SignUpViewModel

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
            </div>
            <div class="col-md-7">
                <!-- Billing Details -->
                <div class="billing-details">
                    <div class="section-title">
                        <h3 class="title">ثبت نام در سایت</h3>
                    </div>
                    <form asp-action="SignUp" asp-controller="Home" asp-area="Users" method="post" asp-antiforgery="true">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>

                            <div class="form-group">
                                <input asp-for="FirstName" class="input" placeholder="نام">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="LastName" class="input" placeholder="نام خانوادگی">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" class="input" placeholder="ایمیل">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmEmail" class="input" placeholder="تکرار ایمیل">
                                <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="PassWord" class="input" placeholder="رمز عبور">
                                <span asp-validation-for="PassWord" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmPassWord" class="input" placeholder="تکرار رمز عبور">
                                <span asp-validation-for="ConfirmPassWord" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-default">ثبت نام</button>
                                <a asp-action="SignIn" asp-controller="Home" asp-area="Users" class="btn btn-default">ورود</a>
                            </div>

                            <div class="form-group">
                               <div class="g-recaptcha" data-sitekey="@Model.SiteKey">

                               </div>
                            </div>


                        </div>
                        </form>
                </div>


            </div>
        </div>
    </div>
</div>